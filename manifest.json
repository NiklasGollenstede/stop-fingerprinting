{
	"manifest_version": 2,
	"name": "Stop Fingerprinting",
	"short_name": "Stop Fingerprinting",
	"version": "0.3.0",
	"author": "Niklas Gollenstede",
	"license": "MPL-2.0",

	"description": "Disables / modifies some browser APIs that would otherwise allow browser fingerprinting",
	"icons": {
		"16": "icons/default/16.png",
		"19": "icons/default/19.png",
		"32": "icons/default/32.png",
		"38": "icons/default/38.png",
		"48": "icons/default/48.png",
		"64": "icons/default/64.png",
		"128": "icons/default/128.png",
		"256": "icons/default/256.png"
	},

	"minimum_chrome_version": "51.0.0",
	"applications": {
		"gecko": {
			"id": "@stop-fingerprinting",
			"strict_min_version": "51.0"
		}
	},

	"permissions": [
		"experiments.content",
		"browsingData",
		"notifications",
		"nativeMessaging",
		"storage",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"webNavigation",
		"*://*/*"
	],
	"optional_permissions": [
	],

	"background": {
		"page": "background/index.html"
	},
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"match_about_blank": false,
			"all_frames": false,
			"run_at": "document_start",
			"js": [
				"content/get-api.js",
				"node_modules/es6lib/port.js",
				"content/files.js",
				"content/index.js"
			]
		}
	],
	"browser_action": {
		"default_title": "Stop Fingerprinting",
		"default_popup": "ui/panel/index.html"
	},
	"options_ui": {
		"page": "ui/home/index.html#options",
		"open_in_tab": true
	},
	"web_accessible_resources": [ ],

	"run_update": {
		"base_path": "/update/"
	},

	"seleniun_setup_port": 54681,

	"incognito": "spanning"
}
